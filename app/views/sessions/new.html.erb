<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h3 class="text-center">Log in</h3>
        <div class="well">
            <%= form_for(:session, url: login_path) do |f| %>

            <div class="form-group <%= 'has-error' if @login_details.errors[:email].count > 0 %>">
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control', placeholder: "#{@login_details.errors[:email].first}" %>
            </div>

            <div class="form-group <%= 'has-error' if @login_details.errors[:email].count > 0 %>">
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control', placeholder: "#{@login_details.errors[:password].first}" %>
            </div>

            <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
            <% end %>
        </div>
    </div>
</div>
