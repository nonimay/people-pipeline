<div class="row">
    <%= form_for candidate, :html => { :class => "form-horizontal"} do |f| %>

    <% if candidate.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(candidate.errors.count, "error") %>
            prohibited this candidate from being saved:</h2>

        <ul>
            <% candidate.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="well well-lg">

        <div class="row">

            <div class="col-md-5">

                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :geo_location %>
                    <%= f.text_field :geo_location, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :github %>
                    <%= f.text_field :github, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :linkedin %>
                    <%= f.text_field :linkedin, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :education_id %>
                    <%= f.collection_select(:education_id, Education.all, :id, :qualification, {}, { class: "form-control" }) %>
                </div>

                <div class="form-group">
                    <%= f.label :pipeline_status_id %>
                    <%= f.collection_select(:pipeline_status_id, PipelineStatus.all, :id, :status, {}, { class: "form-control" }) %>
                </div>

            </div>

            <div class="col-md-5 col-md-offset-2">

                <div class="form-group">
                    <%= f.label :telephone %>
                    <%= f.text_field :telephone, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :email %>
                    <%= f.text_field :email, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :address %>
                    <%= f.text_field :street, class: "form-control", placeholder: I18n.t("activerecord.attributes.candidate.street") %>
                </div>

                <div class="form-group">
                    <%= f.text_field :city, class: "form-control", placeholder: I18n.t("activerecord.attributes.candidate.city") %>
                </div>

                <div class="form-group">
                    <%= f.text_field :county, class: "form-control", placeholder: I18n.t("activerecord.attributes.candidate.county") %>
                </div>

                <div class="form-group">
                    <%= f.text_field :country, class: "form-control", placeholder: I18n.t("activerecord.attributes.candidate.country") %>
                </div>

                <div class="form-group">
                    <%= f.text_field :postcode, class: "form-control", placeholder: I18n.t("activerecord.attributes.candidate.postcode") %>
                </div>

            </div>
        </div>

    </div>

    <%= f.submit class: "btn btn-default btn-primary"%>

    <% end %>
</div>
